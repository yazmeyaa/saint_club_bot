{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "tsBuildInfoFile": null,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "strictPropertyInitialization": false,
    "paths": {
      "@services/*": ["./services/*"],
      "@config/*": ["./config/*"],
      "@helpers/*": ["./helpers/*"],
      "@templates/*": ["./templates/*"],
      "@orm/*": ["./orm/*"],
      "@modules/*": ["./modules/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
