{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "types/*": [
        "./types/*"
      ],
      "@services/*": [
        "./services/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
      "@templates/*": [
        "./templates/*"
      ],
      "@models/*": [
        "./models/*"
      ],
      "@modules/*": [
        "./modules/*"
      ],
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}