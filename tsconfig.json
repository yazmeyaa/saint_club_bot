{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "composite": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "strictPropertyInitialization": false,
    "paths": {
      "types/*": ["./types/*"],
      "@services/*": ["./services/*"],
      "@config/*": ["./config/*"],
      "@helpers/*": ["./helpers/*"],
      "@templates/*": ["./templates/*"],
      "@models/*": ["./models/*"],
      "@modules/*": ["./modules/*"],
      "@commands/*": ["./commands/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
